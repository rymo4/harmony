<!DOCTYPE html>
<html>
<head>
  <title><%= @title %></title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
	<% if @images %>
		<%= javascript_include_tag "jquery.easing-1.3.pack.js" %>
		<%= javascript_include_tag "jquery.mousewheel-3.0.4.pack.js" %>
		<%= javascript_include_tag "jquery.fancybox-1.3.4.js" %>
		<%= stylesheet_link_tag    "jquery.fancybox-1.3.4.css" %>
		
	<% end %>
	<!--[if lt IE 9]>
	<script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
	<![endif]-->
	<script>
	  document.createElement('header');
	  document.createElement('nav');
	  document.createElement('section');
	  document.createElement('article');
	  document.createElement('aside');
	  document.createElement('footer');
	</script>
	<link href='http://fonts.googleapis.com/css?family=Monoton' rel='stylesheet' type='text/css'>
	<link href='http://fonts.googleapis.com/css?family=Open+Sans:300,400' rel='stylesheet' type='text/css'>
</head>
<body>
	<div id="head-wrap">
		<div id="header">
			<h1>Make Music <br />Foundation</h1>
			<div id="guitar-neck"></div>	
			<nav>
				<ul>
					<li><%=link_to 'Home', root_path%> <span class="purp">&bull;</span> </li>
					<li><%=link_to 'Calendar', events_path%> <span class="purp">&bull;</span></li>
					<li><%=link_to 'Gallery', '/images'%> <span class="purp">&bull;</span></li>
					
					<li><%=link_to 'Blog', '/blog_posts' %></li>
				</ul>
			</nav>
		</div>
	</div>
	<div class="shadow">
		<div id="container">
			<center><h2><%= @title %></h2></center>
			<% if @page %>
			<div id="sidecover">
				<div id="sidebar">
					
					<p>If you have any questions about Make Music Foundation, let us know! </p>
					<br/>
					
					<h3>Contact Us!</h3>
					<ul>
						<li>Christine Lo: cl1636@stern.nyu.edu</li>
						<br />
						<li>Hennah Sekandary: hasekandary@gmail.com </li>
					</ul>
					<br />
					<img class="side" src="http://farm7.static.flickr.com/6166/6238962977_d27b1e272e_m.jpg" width="160" height="240" alt="TUNE 24">
			</div>
		</div>
		<div id="main" class="small">
		<% else %>
		<div id="main">
		<% end %>			
			<%= yield %>
		</div>
	</div>
	</div>
</body>
</html>
